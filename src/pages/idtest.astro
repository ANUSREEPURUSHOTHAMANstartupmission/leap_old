---
import data from "../components/dataksum.json";
---

<html lang="en">
  <head>
    <title>Food Technologies</title>
  </head>
  <body class="bg-gray-100 p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {data.map((item) => (
        <div key={item.id} class="p-4 bg-white shadow-md rounded-lg">
          <img src={item.image} alt={item.title} class="w-full h-40 object-cover rounded-md" />
          <h2 class="text-lg font-semibold mt-2">{item.title}</h2>
          <a 
            href={`/details/${item.id}`} 
            class="mt-3 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 inline-block"
          >
            View Details
          </a>
        </div>
      ))}
    </div>
  </body>
</html>
